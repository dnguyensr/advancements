<p id="notice"><%= notice %></p>

<h1>Advancements</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @advancements.each do |advancement| %>
      <tr>
        <td><%= advancement.user.name %></td>
        <td><%= link_to 'Show', advancement %></td>
        <td><%= link_to 'Edit', edit_advancement_path(advancement) %></td>
        <td><%= link_to 'Destroy', advancement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<% if user_signed_in? %>
<%= link_to 'Create Direct Advancement', advancements_path(@user), method: :post, class: "btn btn-success create-advancement" %>
<%= link_to 'Create Advancement', new_advancement_path, class: "btn btn-success" %>
<% end %>
